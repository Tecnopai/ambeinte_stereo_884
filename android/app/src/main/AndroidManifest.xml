<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- ========== PERMISOS REQUERIDOS ========== -->
    
    <!-- Permiso básico de internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Verificar estado de la red para detectar reconexiones -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Verificar estado del WiFi -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Mantener la CPU activa durante reproducción (evita que se duerma) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Reproducción en background (cuando app está minimizada) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Tipo específico de servicio en foreground para Android 14+ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <!-- permisos para botones de volumen -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <!-- ========== CARACTERÍSTICAS DE HARDWARE (AUTOMOTIVE) ========== -->
    
    <!-- Declarar soporte para Android Automotive (opcional - no excluye otros dispositivos) -->
    <uses-feature
        android:name="android.hardware.type.automotive"
        android:required="false" />

    <application
        android:label="Ambientestereo884.fm"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true">
        
        <!-- ========== METADATOS PARA ANDROID AUTO ========== -->
        <!-- Declara que esta app es compatible con Android Auto -->
        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <!-- Specifies an Android theme to apply to this Activity as soon as
                 the Android process has started. This theme is visible to the user
                 while the Flutter UI initializes. After that, this theme continues
                 to determine the Window background behind the Flutter UI. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                
                <!-- ========== CATEGORÍA PARA ANDROID AUTO ========== -->
                <!-- Indica que es una aplicación de música/audio -->
                <category android:name="android.intent.category.APP_MUSIC"/>
            </intent-filter>
        </activity>
        
        <!-- ========== SERVICIO DE AUDIO EN BACKGROUND ========== -->
        <!-- Este servicio permite que el audio continúe cuando la app está minimizada -->
        <service
            android:name="com.ryanheise.audioservice.AudioService"
            android:foregroundServiceType="mediaPlayback"
            android:exported="true">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
        
        <!-- Receptor para detectar cambios de conectividad (reconexión automática) -->
        <receiver
            android:name="com.ryanheise.audioservice.MediaButtonReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        
        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
    
    <!-- Required to query activities that can process text, see:
         https://developer.android.com/training/package-visibility and
         https://developer.android.com/reference/android/content/Intent#ACTION_PROCESS_TEXT.

         In particular, this is used by the Flutter engine in io.flutter.plugin.text.ProcessTextPlugin. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
        
        <!-- Permitir abrir navegadores web (para botón "Ver artículo completo") -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="http" />
        </intent>
    </queries>
    
</manifest>